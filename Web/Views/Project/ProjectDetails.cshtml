@model Web.Viewmodels.Projects.ProjectDetailsViewModel

@{
    ViewData["Title"] = "Детали проекта";
}

<div class="container mt-5">
    <h1 class="mb-4">Детали проекта</h1>
    <dl class="row">
        <dt class="col-sm-2">Код</dt>
        <dd class="col-sm-10">@Model.ProjectDetailsDto.Code</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.ProjectDetailsDto.DisplayName</dd>

        <dt class="col-sm-2">Публичный</dt>
        <dd class="col-sm-10">@Model.ProjectDetailsDto.IsPublic</dd>

        <dt class="col-sm-2">Студент</dt>
        <dd class="col-sm-10">@Model.ProjectDetailsDto.Student?.FullName</dd>

        <dt class="col-sm-2">Преподаватель</dt>
        <dd class="col-sm-10">@Model.ProjectDetailsDto.Teacher?.FullName</dd>

        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">@Model.ProjectDetailsDto.StatusDisplayName</dd>

        <dt class="col-sm-2">Тема</dt>
        <dd class="col-sm-10">@Model.ProjectDetailsDto.ThemeSelectedThemeText</dd>

        <dt class="col-sm-2">Одобрена</dt>
        <dd class="col-sm-10">@Model.ProjectDetailsDto.ThemeIsApproved</dd>
    </dl>
    @if (Model.CanEdit)
    {
        <a asp-action="Edit" asp-route-id="@Model.ProjectDetailsDto.Id" class="btn btn-warning">Редактировать</a>
        <form asp-action="Delete" asp-route-id="@Model.ProjectDetailsDto.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger">Удалить</button>
        </form>
    }
</div>